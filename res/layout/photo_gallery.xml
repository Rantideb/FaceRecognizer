<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    class="com.eim.facesmanagement.PhotoGallery"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/photo_gallery_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/photo_gallery_action_add_delete_photo"
            android:layout_width="@dimen/gallery_height"
            android:layout_height="@dimen/gallery_height"
            android:layout_margin="@dimen/gallery_padding"
            android:src="@drawable/action_add_photo" />
    </LinearLayout>

</HorizontalScrollView>